{
  "name": "nest-api",
  "version": "0.0.1",
  "description": "NestJS API where I try everything that comes to mind.",
  "engines": {
    "node": "=18.18.2"
  },
  "scripts": {
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "mikro-orm-schema-update": "npx --yes mikro-orm schema:update --run",
    "format": "prettier --write \"**/*.ts\" && eslint \"**/*.ts\"",
    "docker:init": "docker-compose up --detach"
  },
  "author": {
    "name": "NOIZET Maxence",
    "email": "noizetmaxencepro@gmail.com",
    "url": "https://github.com/mqxewww"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mqxewww/nest-api.git"
  },
  "keywords": [
    "nodejs",
    "mysql",
    "swagger",
    "nestjs",
    "mikro-orm"
  ],
  "dependencies": {
    "@mikro-orm/cli": "^5.9.2",
    "@mikro-orm/core": "^5.9.2",
    "@mikro-orm/mysql": "^5.9.2",
    "@mikro-orm/nestjs": "^5.2.2",
    "@mikro-orm/seeder": "^5.9.2",
    "@nestjs/common": "^10.2.8",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.8",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.8",
    "@nestjs/swagger": "^7.1.14",
    "@nestjs/throttler": "^5.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "nestjs-pino": "^3.5.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-http": "^8.5.1",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@types/bcrypt": "^5.0.1",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@types/passport-jwt": "^3.0.12",
    "@types/passport-local": "^1.0.37",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}

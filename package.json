{
  "name": "nest-api",
  "version": "0.0.1",
  "description": "NestJS API where I try everything that comes to mind.",
  "engines": {
    "node": "=20.15.0"
  },
  "scripts": {
    "start:dev": "nest start --watch",
    "start:prod": "node src/main",
    "build": "nest build",
    "mikro-orm-schema-update": "npx --yes mikro-orm schema:update --run",
    "mikro-orm-init-database": "npx --yes mikro-orm schema:fresh --run --seed InitDatabaseSeeder",
    "format": "prettier --write \"**/*.{ts,json}\"",
    "check": "eslint \"**/*.ts\" && tsc --noEmit",
    "docker:init": "docker-compose up --detach"
  },
  "author": {
    "name": "NOIZET Maxence",
    "email": "noizetmaxence@proton.me",
    "url": "https://github.com/mqxewww"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mqxewww/nest-api.git"
  },
  "keywords": [
    "nodejs",
    "mysql",
    "swagger",
    "nestjs",
    "mikro-orm"
  ],
  "dependencies": {
    "@mikro-orm/cli": "^6.2.9",
    "@mikro-orm/core": "^6.2.9",
    "@mikro-orm/mysql": "^6.2.9",
    "@mikro-orm/nestjs": "^6.0.2",
    "@mikro-orm/seeder": "^6.2.9",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/throttler": "^5.2.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "nestjs-pino": "^4.1.0",
    "nodemailer": "^6.9.14",
    "pino-http": "^10.2.0",
    "pino-pretty": "^11.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^1.0.3",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^4.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
